
startup_message off

nethack on

# Notifications
activity "Activity in window %n"
bell_msg "Bell in window %n"
msgwait 2
vbell off

hardstatus on
hardstatus alwayslastline
hardstatus string "%{gk}$LOGNAME%{wk}@%{gk}%H%=%{b}%-Lw%{= kw}%50>%n* %t%{-}%+Lw%= %{r}%f %{w}%c"

defscrollback 10000

term screen-256color-bce
termcapinfo xterm* OP
termcapinfo xterm* ti@:te@
defbce on

altscreen off

deflogin off

